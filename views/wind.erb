      <th scope="col">Daytime Weather</th>
      <th scope="col">Nightime Weather</th>
      <th scope="col">Avg. Wind Speed (mph)</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @weather_report_day1[0] %></th>
      <td><%= @weather_report_day1[2]['daytime']['text'] %></td>
      <td><%= @weather_report_day1[2]['night']['text'] %></td>
      <td><%= @weather_report_day1[1]['value'] %></td>
    </tr>
    <tr>
      <th scope="row"><%= @weather_report_day2[0] %></th>
