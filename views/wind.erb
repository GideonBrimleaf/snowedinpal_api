      <td><%= @weather_report_day2[1]['value'] %></td>
    </tr>
    <tr>
      <th scope="row"><%= @weather_report_day3[0] %></th>
      <td><%= @weather_report_day3[2]['daytime']['text'] %></td>
      <td><%= @weather_report_day3[2]['night']['text'] %></td>
      <td><%= @weather_report_day3[1]['value'] %></td>
